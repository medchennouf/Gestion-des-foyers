pipeline {
  agent any

  environment {
    // Adapter si besoin (nom du serveur Sonar dans Jenkins)
    SONARQUBE_ENV = 'Sonar'
  }

  stages {

    stage('Checkout') {
      steps { checkout scm }
    }

    stage('Build & Unit Tests') {
      steps {
        sh 'mvn clean verify'
      }
    }

    stage('SonarQube Analysis') {
      environment {
        scannerHome = tool 'SonarScanner'
      }
      steps {
        withSonarQubeEnv(SONARQUBE_ENV) {
          sh """
            ${scannerHome}/bin/sonar-scanner \
              -Dsonar.projectKey=gestion-des-foyers \
              -Dsonar.projectName=gestion-des-foyers \
              -Dsonar.sources=src/main/java \
              -Dsonar.tests=src/test/java \
              -Dsonar.java.binaries=target/classes \
              -Dsonar.junit.reportPaths=target/surefire-reports \
              -Dsonar.jacoco.reportPaths=target/site/jacoco/jacoco.xml
          """
        }
      }
    }

    stage('OWASP Dependency Check') {
      steps {
        sh 'mvn org.owasp:dependency-check-maven:check'
      }
    }

    stage('Docker Build') {
      steps {
        sh """
          docker build -t mohamed284/gestion-foyers:latest .
          docker tag mohamed284/gestion-foyers:latest mohamed284/gestion-foyers:${env.BUILD_NUMBER}
        """
      }
    }

    stage('Trivy Image Scan') {
      steps {
        sh '''
          trivy image --severity HIGH,CRITICAL \
            --format table mohamed284/gestion-foyers:latest || true
        '''
      }
    }

    stage('Push DockerHub') {
      steps {
        withCredentials([usernamePassword(
          credentialsId: 'dockerhub-creds',
          usernameVariable: 'DOCKERHUB_USER',
          passwordVariable: 'DOCKERHUB_PASS'
        )]) {
          sh '''
            echo "$DOCKERHUB_PASS" | docker login -u "$DOCKERHUB_USER" --password-stdin
            docker push mohamed284/gestion-foyers:latest
            docker push mohamed284/gestion-foyers:${BUILD_NUMBER}
            docker logout || true
          '''
        }
      }
    }

    stage('Deploy') {
      steps {
        sh '''
          docker rm -f gestion-foyers-container 2>/dev/null || true
          docker run -d --name gestion-foyers-container \
            -p 8080:8080 \
            mohamed284/gestion-foyers:latest
        '''
      }
    }
  }

  post {
    always {
      // Rapports OWASP Dependency-Check
      archiveArtifacts artifacts: 'target/dependency-check-report.*', allowEmptyArchive: true
      // Rapports tests JUnit
      junit 'target/surefire-reports/*.xml'
    }
  }
}
